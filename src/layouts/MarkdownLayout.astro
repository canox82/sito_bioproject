---
import Layout from './Layout.astro';
const { frontmatter } = Astro.props;
---
<Layout titolo={frontmatter.title}>
  <div class="w-75 mx-auto text-center mb-2">
    <h2>{frontmatter.title}</h2>
    <h5><em>"{frontmatter.description}"</em></h5>
    <br />
    <img src={frontmatter.image.url} class="img-fluid" alt={frontmatter.image.alt} />
  </div>
  <slot />
</BaseLayout>

