---
import Layout from '../layouts/Layout.astro';
import Modulo from '../components/Modulo.astro';

import ImgLav from '../components/ImgLav.astro';
const allPosts = await Astro.glob('./lavori/*.mdx');
---

<Layout titolo="Bio Project Srls - Case in legno, serramenti e bioedilizia - Le case dei nostri clienti">
	<main>
		<p class="instructions">
			I NOSTRI LAVORI 
		</p>
		<p>
			Le case che abbiamo costruito per i Nostri clienti
		</p>
		<ul role="list" class="link-card-grid">
			{allPosts.map((post) =>
					<a style="text-decoration: none;" href={post.url}>
						<ImgLav 
							imagePath={post.frontmatter.preimg}
							altText={post.frontmatter.title}
							name={post.frontmatter.title}
							description={post.frontmatter.description}
						/>
					</a>
			)}
		</ul>
		<Modulo />
	</main>
</Layout>

<style>
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 35%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-light), 33%));
		padding: 1.5rem;
		border-radius: 8px;
		font-size: 1.2rem;
		color: #ffffff;
		font-weight: bold;
		text-align: center;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-dark), 12%);
		color: rgb(var(--accent-dark));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-dark));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
		card-color-background:white;
	}
</style>
