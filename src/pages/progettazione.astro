---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Navigation from '../components/Navigation.astro';
import logoBioProject from './img/logo.png';
import { Image } from 'astro:assets';

import ImgProg from '../components/ImgProg.astro';
---

<Layout title="Bio Project">
	<main>
		<Image src={logoBioProject} height="150" alt="Logo Bio Project" />
		<Navigation />
		<p class="instructions">
			PROGETTAZIONE
		</p>
		<ul role="list" class="link-card-grid">
		<ImgProg 
			imagePath="/src/pages/img/progettazione/haas_perfect_86.jpg"
			altText="Haas Perfect 86"
    		name="Haas Perfect 86"
		/>
		<ImgProg 
			imagePath="/src/pages/img/progettazione/haas_perfect_120.jpg"
			altText="Haas Perfect 120"
    		name="Haas Perfect 120"
		/>
		<ImgProg 
			imagePath="/src/pages/img/progettazione/haas_s_141.jpg"
			altText="Haas S 141"
    		name="Haas S 141"
		/>
		<ImgProg 
			imagePath="/src/pages/img/progettazione/haas_s_165.jpg"
			altText="Haas S 165"
    		name="Haas S 165"
		/>
		<ImgProg 
			imagePath="/src/pages/img/progettazione/haas_s_165_.jpg"
			altText="Haas S 165 - Altra vista"
    		name="Haas S 165 - Altra vista"
		/>
		<ImgProg 
			imagePath="/src/pages/img/progettazione/lanos_4_1290.jpg"
			altText="Lanos 4 1290"
    		name="Lanos 4 1290"
		/>
		</ul>
		<p>
			Compila il modulo per richiedere informazioni <br />
			<form method="POST">
				<label>
				  Nome:
				  <input type="text" name="nome" required />
				</label>
				<br />
				<label>
				  Email:
				  <input type="email" name="email" required />
				</label>
				<br />
				<label>
				  Richiesta:
				</label>
				<br />
				<textarea id="richiesta" name="richiesta" rows="5" cols="50" required />
				<br />
				<button>Invia</button>
			  </form>
		</p>
	</main>
	<Footer />
</Layout>

<style>
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 35%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-light), 33%));
		padding: 1.5rem;
		border-radius: 8px;
		font-size: 1.2rem;
		color: #ffffff;
		font-weight: bold;
		text-align: center;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-dark), 12%);
		color: rgb(var(--accent-dark));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-dark));
	}
	.link-card-grid {
		text-align: center;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
		card-color-background:white;
	}
</style>
