---
import Layout from '../layouts/Layout.astro';

import ImgProg from '../components/ImgProg.astro';
const allPosts = await Astro.glob('./progettazione/*.mdx');
---

<Layout title="Bio Project">
	<main>
		<p class="instructions">
			PROGETTAZIONE
		</p>
		<ul role="list" class="link-card-grid">
			{allPosts.map((post) =>
					<a href={post.url}>
						<ImgProg 
							imagePath={post.frontmatter.preimg}
							altText={post.frontmatter.title}
							name={post.frontmatter.title}
						/>
					</a>
			)}
		</ul>
		<p>
			Compila il modulo per richiedere informazioni <br />
			<form method="POST">
				<label>
				  Nome:
				  <input type="text" name="nome" required />
				</label>
				<br />
				<label>
				  Email:
				  <input type="email" name="email" required />
				</label>
				<br />
				<label>
				  Richiesta:
				</label>
				<br />
				<textarea id="richiesta" name="richiesta" rows="5" cols="50" required />
				<br />
				<button>Invia</button>
			  </form>
		</p>
	</main>
</Layout>

<style>
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	a {
		text-decoration: none;
		color: rgb(var(--accent-dark));
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 35%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-light), 33%));
		padding: 1.5rem;
		border-radius: 8px;
		font-size: 1.2rem;
		color: #ffffff;
		font-weight: bold;
		text-align: center;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-dark), 12%);
		color: rgb(var(--accent-dark));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-dark));
	}
	.link-card-grid {
		text-align: center;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
		card-color-background:white;
	}
</style>
