---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
    imagePath: string;
    altText: string;
    name: string;
 }
 
 const { imagePath, altText, name} = Astro.props;
 const images = import.meta.glob<{ default: ImageMetadata }>('/src/pages/img/progettazione/*.{jpeg,jpg,png,gif}')
 if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "/src/pages/img/progettazione/*.{jpeg,jpg,png,gif}"`);
 ---
 <div class="card d-flex" style="width: 13rem;height:170px; !important;">
    <Image src={images[imagePath]()}  height="110" alt={altText} class="card-img-top" />
    <div class="card-body border mb-0">
        <h6 class="card-title">{name}</h6>
    </div>
</div>

<style>
    .card {
        /* Add shadows to create the "card" effect */
        /* box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;*/
        border: none;
        text-decoration: none;
        
    }

    /* On mouse-over, add a deeper shadow */
    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        border:none;
    }
</style>