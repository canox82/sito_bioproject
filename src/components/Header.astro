---
const home = "/sito_bioproject";
import { Image } from "astro:assets";
import logoBioProject from "/src/pages/img/logo.png";

import { Navbar } from 'astro-bootstrap';
import type { NavbarItemType } from 'astro-bootstrap';
// demonstration data
const siteTitle = 'Bio Project'; // pull this in from a config file
const items: NavbarItemType[] = [
  // pull this in from a config file
  { text: 'Home', href: '/sito_bioproject' },
  { text: 'Serramenti', href: '/sito_bioproject/serramenti' },
  { text: 'Progettazione', href: '/sito_bioproject/progettazione' },
  { text: 'Pratiche', href: '/sito_bioproject/pratiche' },
  { text: 'Lavori', href: '/sito_bioproject/lavori' },
  { text: 'Contatti', href: '/sito_bioproject/contatti' },
];

const id = 'Menu';
---

<Navbar class="navbar-expand-lg" data-bs-theme="light">
  <div class="container-fluid">
    <a class="navbar-brand" href={home}><Image src={logoBioProject} height="150" alt="Logo Bio Project" /></a>
    <Navbar.Toggler controls={id} />
    <Navbar.Collapse {id}>
      <Navbar.Items {items} class="me-auto mb-2 mb-lg-0 fs-6" />
    </Navbar.Collapse>
  </div>
</Navbar>